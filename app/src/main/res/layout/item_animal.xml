<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/card_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Animal Title -->
            <TextView
                android:id="@+id/animalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Animal Catalogue: Fox"
                android:textSize="26sp"
                android:textColor="@color/text_brown"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp" />

            <!-- Scientific Name -->
            <TextView
                android:id="@+id/scientificName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vulpes vulpes"
                android:textSize="14sp"
                android:textColor="@color/text_gray"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- Animal Image -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/animalImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Animal Image" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Description Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textSize="18sp"
                android:textColor="@color/text_brown"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/animalDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description goes here"
                android:textSize="15sp"
                android:textColor="@color/text_dark_gray"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <!-- Habitat -->
            <TextView
                android:id="@+id/habitatText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Habitat: Forests and grasslands"
                android:textSize="14sp"
                android:textColor="@color/text_dark_gray"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp"
                android:drawablePadding="8dp"
                android:drawableStart="@android:drawable/ic_dialog_map" />

            <!-- Fun Fact -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/fun_fact_background"
                app:cardElevation="2dp">

                <TextView
                    android:id="@+id/funFactText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Fun Fact: Amazing fact here!"
                    android:textSize="14sp"
                    android:textColor="@color/text_brown"
                    android:lineSpacingExtra="2dp"
                    android:padding="12dp" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</com.google.android.material.card.MaterialCardView>