<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.AnimalCatalogue" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/button_vintage</item>
        <item name="colorPrimaryVariant">@color/button_pressed</item>
        <item name="colorOnPrimary">@color/text_white</item>
        <item name="android:statusBarColor">@color/background_cream</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
    </style>

    <style name="Theme.AnimalCatalogue" parent="Base.Theme.AnimalCatalogue" />

    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/card_background</item>
        <item name="chipStrokeColor">@color/border_selected</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_brown</item>
        <item name="chipCornerRadius">16dp</item>
    </style>
</resources>

